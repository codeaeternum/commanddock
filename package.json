{
  "name": "commanddock",
  "version": "1.0.0",
  "description": "Contextual command panel for developers",
  "main": "electron/main.js",
  "author": "Galindo",
  "license": "ISC",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "electron:dev": "concurrently -k \"cross-env NODE_ENV=development vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "electron:build": "vite build && electron-builder --win --mac",
    "electron:build:win": "vite build && electron-builder --win",
    "electron:build:mac": "vite build && electron-builder --mac",
    "electron:build:portable": "vite build && electron-builder --win portable"
  },
  "build": {
    "appId": "com.galindo.commanddock",
    "productName": "CommandDock",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  }
}